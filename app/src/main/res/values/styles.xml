<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--底部四个按钮的布局-->
    <style name="navBottom">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">center</item>
        <item name="android:textColor">@drawable/textcolor</item>
    </style>
    <!--首页二维码的布局-->
    <style name="home_nav_img_code">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/home_nav_left</item>
    </style>
    <!--首页搜索框的布局-->
    <style name="home_search_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:hint">搜索一下</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@color/colorNav_homesearch_color</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--定位-->
    <style name="home_message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <!--首页button天猫-->
    <style name="user_dingdan_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="user_nav_style">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">80dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:button">@null</item>
    <item name="android:layout_marginTop">15dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">#fff</item>
    </style>
    <style name="login_mobil">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

</resources>
