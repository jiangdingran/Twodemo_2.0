<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@mipmap/ll"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:progressBarImage="@mipmap/zz"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="5000"
        fresco:failureImage="@mipmap/cuo"
        fresco:failureImageScaleType="centerInside"
        fresco:retryImage="@mipmap/again"
        fresco:retryImageScaleType="centerCrop"
        fresco:roundTopLeft="false"
        android:id="@+id/simpleshop"
        fresco:roundAsCircle="false"
        fresco:roundingBorderWidth="1dp"
        fresco:roundingBorderColor="#9c9c9c"

        />

    <TextView
        android:id="@+id/id_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>
</LinearLayout>